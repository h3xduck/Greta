            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/license_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>